{
  "name": "Connect Arcade - Game Dev",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "runArgs": [
    "--device=/dev/kfd:/dev/kfd",
    "--device=/dev/dri:/dev/dri",
    "--device=/dev/snd:/dev/snd",
    "--group-add=44",
    "--group-add=992",
    "--group-add=29",
    "--shm-size=2g",
    "--security-opt=seccomp=unconfined"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "HSA_OVERRIDE_GFX_VERSION": "11.0.0",
    "SDL_VIDEODRIVER": "x11",
    "SDL_AUDIODRIVER": "alsa",
    "QT_X11_NO_MITSHM": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=${localEnv:XAUTHORITY},target=/tmp/.Xauthority,type=bind,readonly",
    "source=${localEnv:HOME}/AI work/anon/projects/games,target=/workspace/games,type=bind"
  ],
  "workspaceFolder": "/workspace/games",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  },
  "postCreateCommand": "pip install pygame numpy Pillow"
}